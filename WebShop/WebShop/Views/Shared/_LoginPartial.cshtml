@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav gap-2">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="btn btn-link">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a asp-area="Identity" asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
            <a asp-area="Identity" asp-controller="Account" asp-action="Login" >Log In</a>
    </li>
}
</ul>
