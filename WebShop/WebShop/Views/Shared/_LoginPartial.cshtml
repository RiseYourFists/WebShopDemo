@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav gap-2">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <span>Hello @User.Identity?.Name!</span>
    </li>
    <li class="nav-item">
            <a asp-area="Identity" asp-controller="Account" asp-action="LogOut">Log Out</a>
    </li>
}
else
{
    <li class="nav-item">
        <a asp-area="Identity" asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
            <a asp-area="Identity" asp-controller="Account" asp-action="Login" >Log In</a>
    </li>
}
</ul>
