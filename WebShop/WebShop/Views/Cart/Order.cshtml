@{
    ViewData["Title"] = "Place an order";
}
@model OrderModel;

<section id="order" class="small-window-field">
    <div class="title-holder">
        <h1 class="title">Order placement</h1>
    </div>
    <form action="" class="form-list">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-field">
            <label asp-for="Country"></label>
            <input type="text" asp-for="Country">
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <div class="form-field">
            <label asp-for="City"></label>
            <input type="text" asp-for="City">
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-field">
            <label asp-for="Address"></label>
            <input type="text" asp-for="Address">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="pricing">
            <p>Total: @Model.TotalPrice$</p>
        </div>
        <div class="centered action-list">
            <a asp-controller="Cart" asp-action="Checkout" class="cancel"><i class="fas fa-caret-left"></i> Go Back</a>
            <button type="submit" class="btn-confirm"><i class="fas fa-check"></i> Place Order</button>
        </div>
    </form>
</section>